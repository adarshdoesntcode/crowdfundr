    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>

    <script src="/js/confetti.js"></script>
    <script
      src="https://khalti.s3.ap-south-1.amazonaws.com/KPG/dist/2020.12.17.0.0.0/khalti-checkout.iffe.js"
    ></script>
