<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CrowdFundr.</title>
    <link rel="icon" href="/img/favicon.png" type="image/svg+xml" />
    {{! <link rel="stylesheet" href="/css/style.css" /> }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css"/>
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">

    <link rel="stylesheet" href="/css/campaignpage.css" />
    <link rel="stylesheet" href="/css/tab.css" />

    <link rel="stylesheet" href="/css/alert-message.css" />
    <link rel="stylesheet" href="/css/footer.css" />


  </head>
  <body>
    <div class="hero-section">
      <div class="nav-container">
        {{#if user}}
          {{> protected-nav}}
          {{else}}
          {{> public-nav}}
        {{/if}}
        {{! ----------NAV BAR ENDS ------------  }}

      </div>
      <div class="campaign-hero-container">
        <div class="picture-section">
          <img src="{{image}}" data-aos="fade-zoom-in" data-aos-duration="1200"/>
          {{! <p>Created on July 5 2022</p> }}
        </div>
        <div class="description-section" data-id="{{id}}">
          <div class="campaign-status"><p id="camp-stat" class="{{campaignStatus}}">{{campaignStatus}}</p></div>
          <div class="campaign-title"><p
              class="campaign-title-for-khalti"
            >{{title}}</p></div>
          <div class="campaign-address"><p>{{address}}</p></div>
          <div class="short-description"><p>{{description}}</p></div>
          <div class="organizer-details">
            <p class="author-name">Organizer {{organizerName}}</p>
            <p class="created-on">{{createdDate}}</p>
          </div>
          <div class="campaign-category"><p>{{type}}</p></div>
          <div class="campaign-progress">
            <div class="progress-data">
              <p class="raised-amount">‡§∞‡•Ç {{raised}}</p>
              <p class="backers-number">{{backers}} Backers</p>
            </div>
            <div class="progress-bar">
              <div
                class="progress-done"
                data-width={{percentForBar}}
              ></div>
            </div>
            <div class="progress-goal">
              <p class="goal-amount-percentage">{{percentage}}% of ‡§∞‡•Ç
                {{goal}}</p>
              <div class="days-left">{{daysLeft}} Days left</div>
            </div>
            <div class="campaign-interaction-div">
              <div class="back-campaign-button button">Back this campaign</div>
              <div class="social-link"><i class="fas fa-link"></i></div>
            </div>
          </div>

        </div>
      </div>

    

    <div class="second-container">
      <div class="tab-container">
          <div class="tabs">
            <div class="tab">
              <input
                type="radio"
                name="css-tabs"
                id="tab-1"
                checked
                class="tab-switch"
              />
              <label for="tab-1" class="tab-label">Story</label>
              <div class="tab-content story">{{story}}
              </div>
            </div>
            <div class="tab">
              <input
                type="radio"
                name="css-tabs"
                id="tab-2"
                class="tab-switch"
              />
              <label for="tab-2" class="tab-label">Supporters</label>
              <div class="tab-content render-donations">
          {{!-- RENDERED DYNAMICALLY --}}
 
                
              </div>
            </div>
          </div>
      </div>
      <div class="top-donars-container">
        <div class="head">Top Supporters üèÜ</div>
          {{!-- RENDERED DYNAMICALLY --}}
      </div>
    </div>
</div>
    <div class="donation-modal-container">
      <div class="donation-modal">
        <p class="donation-portal">Donation <span>Portal</span></p>
        <label for="name">Name</label>
        <input id="donation-name" type="text" placeholder="Anonymous" />
        <label for="message">Message</label>
        <input
          id="donation-message"
          type="text"
          placeholder="Hope this helps!"
        />
        <label for="amount">Amount</label>
        <input id="donation-amount" type="number" placeholder="‡§∞‡•Ç.." />
        <button id="payment-button" class="button"><p
            id="donate-via-khalti"
          >Donate via Khalti</p>
        </button>
      </div>

    </div>


    <div class="alert-box"></div>
    <canvas
      id="confetti-canvas"
      style="display:block;z-index:999999;pointer-events:none;position:fixed;top:0"
      width="1900"
      height="1000"
    ></canvas>
    {{>footer}}
