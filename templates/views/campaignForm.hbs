        <div class="campaign-form-container">

          <header>Campaign Registration From</header>

          <form id="campaign-form">
            <div class="form first">
              <div class="details personal">
                <span class="title">Campaign Details</span>

                <div class="fields">
                  <div class="input-field">
                    <label>Campaign Title</label>
                    <input type="text" id="campaignTitle" placeholder="title name" required/>
                  </div>

                <div class="input-field">
                    <label>Description</label>
                    <input type="text" id="description" placeholder="one line description" required/>
                  </div>

                  <div class="input-field">
                    <label>Campaign end Date</label>
                    <input type="date" id="campaignDuration" placeholder="campaign ending date" required/>
                  </div>

                  <div class="input-field">
                    <label>Campaign Type</label>
                    <select id="campaignType" required>
                      <option disabled selected>Select type</option>
                      <option>Individual</option>
                      <option>Non-Profit</option>
                    </select>
                  </div>

                  <div class="input-field">
                    <label>Goal Amount</label>
                    <input type="number" id="goalAmount" placeholder="amount in rupeese" required/>
                  </div>


                  <div class="input-field">
                    <label>Campaign Photo URL</label>
                    <input type="text" id="campaignImage" placeholder="image url" required/>
                  </div>

                    <div class="input-field">
                    <label>Social Media Link</label>
                    <input type="text" id="socialMediaLink" placeholder="facebook/twitter link" />
                  </div>

                    <div class="input-field">
                    <label>Campaign Address</label>
                    <input type="text" id="campaignAddress" placeholder="address of your campaign" required/>
                </div>
                <div class="input-field">
                    <label>Campaign Story</label>
                    <input type="text" id="reasonBehindCampaign" placeholder="story behind your campaign" required/>
                  </div>
              </div>

              <div class="details ID">
                <span class="title">Organizer Details</span>

                <div class="fields">
                  <div class="input-field">
                    <label>Organizer Name</label>
                    <input type="text" id="organizerName" placeholder="name of the organizer" required/>
                  </div>

                  <div class="input-field">
                    <label>Organizer Email</label>
                    <input type="email" id="contactEmail" placeholder="email address" required/>
                  </div>

                  <div class="input-field">
                    <label>Contact Number</label>
                    <input type="text" id="contactNumber" placeholder="+977 9XXXXXXXX" required/>
                  </div>
                <button type="submit" class="nextBtn">
                  <span class="btnText">Submit</span>
                  {{!-- <i class="uil uil-navigator"></i> --}}
                </button>
              </div>
